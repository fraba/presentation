@article{dorazio_Kickoff_2015,
  title = {Kickoff to {{Conflict}}: {{A Sequence Analysis}} of {{Intra-State Conflict-Preceding Event Structures}}},
  shorttitle = {Kickoff to {{Conflict}}},
  author = {D'Orazio, Vito and Yonamine, James E.},
  year = {2015},
