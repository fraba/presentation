@article{lindholm_Predicting_2022,
  title = {Predicting Political Violence Using a State-Space Model},
  author = {Lindholm, Andreas and Hendriks, Johannes and Wills, Adrian and Sch{\"o}n, Thomas B.},
  year = {2022},
  month = jul,
  journal = {International Interactions},
  volume = {48},
  number = {4},
  pages = {759--777},
  publisher = {Routledge},
  issn = {0305-0629},
  doi = {10.1080/03050629.2022.2094921},
  urldate = {2024-05-01},
  abstract = {We provide a proof-of-concept for a novel state-space modelling approach for predicting monthly deaths due to political violence. Attention is focused on developing the method and demonstrating the utility of this approach, which provides exciting opportunities to engage with domain experts in developing new and improved state-space models for predicting violence. The prediction is made on a grid of cells with spatial resolution of 0.5 {\texttimes} 0.5 degrees, and each cell is modeled to have two mathematically well-defined unobserved/latent/hidden states that evolves over time and encode the ``onset risk'' and ``potential severity'', respectively. This offers a certain level of interpretability of the model. By using the model for computing the probability distribution for a death count at a future time conditioned on all data observed up until the current time, a predictive distribution is obtained. The predictive distribution typically places a certain mass at the death count 0 (no violent outbreak) and the remaining mass indicating a likely interval of the fatality count, should a violent outbreak appear. To evaluate the model performance we---lacking a better alternative---report the mean of the predictive distribution, but the access to the predictive distribution is in itself an interesting contribution to the application. This work merely serves as a proof-of-concept for the state-space modeling approach for this type of data and several possible directions for further work that could improve the predictive performance are suggested.},
  keywords = {Conflict prediction,hidden Markov model,probabilistic modeling,state-space model}
}

@inproceedings{burley_NLP_2020,
  title = {{{NLP Workflows}} for {{Computational Social Science}}: {{Understanding Triggers}} of {{State-Led Mass Killings}}},
  shorttitle = {{{NLP Workflows}} for {{Computational Social Science}}},
  booktitle = {Practice and {{Experience}} in {{Advanced Research Computing}}},
